<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/lisattavaAsia"
        android:layout_width="240dp"
        android:layout_height="61dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="@string/ohje"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textAllCaps="false"
        android:textColorHighlight="#472088"
        android:textColorLink="@color/colorPrimary"
        android:textCursorDrawable="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nappiLisaa"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/lisaa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lisattavaAsia" />

    <Button
        android:id="@+id/nappiVahenna"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="@string/poista"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lisattavaAsia" />

    <TextView
        android:id="@+id/lisattavaMaara"
        android:layout_width="28dp"
        android:layout_height="74dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/nolla"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/nappiVahenna"
        app:layout_constraintStart_toEndOf="@+id/nappiLisaa"
        app:layout_constraintTop_toBottomOf="@+id/lisattavaAsia" />

    <Button
        android:id="@+id/lisaaTuote"
        android:layout_width="78dp"
        android:layout_height="74dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="40dp"
        android:text="@string/lisaaTuote"
        app:layout_constraintStart_toEndOf="@+id/lisattavaAsia"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="307dp"
        android:layout_height="507dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lisattavaMaara" />

</androidx.constraintlayout.widget.ConstraintLayout>